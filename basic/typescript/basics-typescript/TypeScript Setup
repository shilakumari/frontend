    <title>Understanding TypeScript</title>
    <script src="first-file.js" defer></script>
  </head>
  <body>
    <input type="number" id="num1" placeholder="Number 1" />
    <input type="number" id="num2" placeholder="Number 2" />
    <button>Add</button>
    <div id="result">
    </div>
  </body>
</html>



